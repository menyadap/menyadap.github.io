---
// src/components/Callout.astro
// Shortcode untuk callout/highlight box
// Gunakan: <Callout>Konten penting yang ingin disorot</Callout>

interface Props {
  emoji?: string;
  type?: 'default' | 'primary' | 'secondary';
}

const {
  emoji = 'ðŸ’¡',
  type = 'default'
} = Astro.props;
---

<!-- Callout box untuk highlight konten penting -->
<div class={`callout callout-${type}`}>
  <span class="callout-emoji">{emoji}</span>
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    margin: 1.5rem 0;
    border-left: 4px solid;
    border-radius: 6px;
    background-color: #f5f5f5;
  }

  [data-theme="dark"] .callout {
    background-color: #2a2a2a;
  }

  .callout-default {
    border-left-color: #0066cc;
    background-color: #e6f2ff;
  }

  [data-theme="dark"] .callout-default {
    background-color: #1a3a52;
    border-left-color: #4da6ff;
  }

  .callout-primary {
    border-left-color: #28a745;
    background-color: #e6f9f0;
  }

  [data-theme="dark"] .callout-primary {
    background-color: #1a3a2a;
    border-left-color: #4ade80;
  }

  .callout-secondary {
    border-left-color: #fd7e14;
    background-color: #fff4e6;
  }

  [data-theme="dark"] .callout-secondary {
    background-color: #3a2a1a;
    border-left-color: #fb923c;
  }

  .callout-emoji {
    font-size: 1.5rem;
    min-width: 2rem;
    display: flex;
    align-items: center;
  }

  .callout-content {
    flex: 1;
  }

  .callout-content :global(p) {
    margin: 0;
  }

  .callout-content :global(p + p) {
    margin-top: 0.5rem;
  }

    .callout-primary {
      background-color: #1a3a2e;
    }

    .callout-secondary {
      background-color: #3a2a1a;
    }
  }
</style>
