---
interface Props {
  title?: string;
  subtitle?: string;
  phone?: string;
  imageUrl?: string;
  features?: string[];
}

const {
  title = "Aplikasi Pengawas HP Jarak Jauh?",
  subtitle = "Mendukung iPhone & Android",
  phone = "62812345678",
  imageUrl = "/images/sadap-phone.webp",
  features = [
    "ðŸ’¬ Monitoring aktivitas aplikasi pesan (WhatsApp, Telegram, Line, Instagram, Facebook, Skype, Viber, Snapchat)",
    "ðŸ“· Pemantauan kamera & layar dengan izin pemilik perangkat",
    "ðŸ“ž Riwayat panggilan telepon & akses galeri"
  ]
} = Astro.props;
---

<div class="qc-wrapper">
  <div class="qc-card">

    <div class="h2 qc-title">{title}</div>
    <p class="qc-subtitle">ðŸ“± {subtitle}</p>

    {imageUrl && (
      <img
        src={imageUrl}
        alt="Layanan Monitoring Perangkat"
        class="qc-image"
      />
    )}

    <div class="qc-features">
      {features.map(feature => (
        <p>â€¢ {feature}</p>
      ))}
    </div>

    <slot />

    <p class="qc-note">
      ðŸ”’ Penggunaan sah & dengan persetujuan pemilik perangkat
    </p>

    <a
      href={`https://wa.me/${phone.replace(/\D/g, "")}`}
